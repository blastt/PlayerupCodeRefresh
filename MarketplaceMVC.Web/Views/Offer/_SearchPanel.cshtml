@model IList<SelectListItem>

<div class="col-lg-3">
    <div class="bd-example">
        @using (Ajax.BeginForm("OfferSearch", new AjaxOptions { UpdateTargetId = "offers" }))
        {
            <h4 class="text-center mb-4">Условия поиска</h4>
            <div class="form-group">

                <label for="inputEmail4">Игра</label>
                @Html.DropDownList("Game", Model, new { @class = "custom-select" })


            </div>
            <div class="form-group">
                <label for="inputAddress">Поиск</label>
                <input name="SearchString" type="text" class="form-control" id="inputAddress" placeholder="Найти...">
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Искать в описании
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Только онлайн пользователи
                    </label>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <label for="inputEmail4">Цена</label>
                </div>

                <div class="form-group col-md-6">

                    <input type="text" class="form-control" name="PriceFrom" placeholder="От...">
                </div>
                <div class="form-group col-md-6">

                    <input type="text" class="form-control" name="PriceTo" placeholder="До...">
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    @Html.CheckBox("PersonalAccount", false, new { @class = "form-check-input", id = "PersonalAccount" })
   
                    <label class="form-check-label" for="PersonalAccount">
                        Личный аккаунт
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                        Аккаунт с баном
                    </label>
                </div>
            </div>

            <div class="form-row mt-4">
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-primary w-100"><i class="fas fa-search"></i> Поиск</button>
                </div>
                <div class="col-sm-6">
                    <button type="reset" class="btn btn-primary w-100"><i class="fas fa-redo-alt"></i> Сбросить</button>
                </div>
            </div>
        }
    </div>
</div>
