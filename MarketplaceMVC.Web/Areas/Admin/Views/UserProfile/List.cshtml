@model MarketplaceMVC.Web.Areas.Admin.Models.UserProfile.UserProfileListViewModel

@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Юзверы</h2>

<div class="row">
    <div class="col-lg-12">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Имя</th>
                    <th scope="col">Почта</th>
                    <th scope="col"></th>
                    <th scope="col">Бан</th>
                    <th scope="col">Причина</th>
                    <th scope="col"><i class="far fa-smile"></i></th>
                    <th scope="col"><i class="far fa-frown"></i></th>
                    <th scope="col">Баланс</th>
                    <th scope="col">#</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var user in Model.UserProfiles)
                {
                <tr>
                    <th>@user.Id</th>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@Html.DisplayFor(m => user.EmailConfirmed)</td>
                    <td>@Html.DisplayFor(m => user.IsBanned)</td>
                    <td>@user.LockoutReason</td>
                    <td>@user.NegativeFeedbackCount</td>
                    <td>@user.PositiveFeedbackCount</td>
                    <td>@user.Balance</td>
                    <td><img src="@user.Avatar32Path" /></td>
                    <td><a href="@Url.Action("Delete","UserProfile", new { id = user.Id })"><i class="fas fa-user-minus"></i></a></td>
                    <td><a href="@Url.Action("LockUser","UserProfile", new { id = user.Id })"><i class="fas fa-lock"></i></a></td>
                    <td><a href="@Url.Action("UnlockUser","UserProfile", new { id = user.Id })"><i class="fas fa-unlock"></i></a></td>
                    <td><a href="@Url.Action("EditUser","UserProfile", new { id = user.Id })"><i class="fas fa-user-edit"></i></a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

